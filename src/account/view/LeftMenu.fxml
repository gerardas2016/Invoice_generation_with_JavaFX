<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Button graphicTextGap="30.0" mnemonicParsing="false" prefWidth="120.0" text="Home">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0">
                     <image>
                        <Image url="@Png/Home.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button graphicTextGap="30.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Invoices">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="24.0">
                     <image>
                        <Image url="@Png/invoice1.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button graphicTextGap="15.0" mnemonicParsing="false" prefWidth="120.0" text="Customers">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0">
                     <image>
                        <Image url="@Png/Happy-Clients-icon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button graphicTextGap="20.0" mnemonicParsing="false" prefWidth="120.0" text="Products">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0">
                     <image>
                        <Image url="@Png/qubes_logo.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button graphicTextGap="30.0" mnemonicParsing="false" prefWidth="120.0" text="Reports">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0">
                     <image>
                        <Image url="@Png/chart.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
